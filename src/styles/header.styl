/* Las navbars en dispositivos m√≥viles normalmente son de 64px */
.Header
	//background-image url('../img/blue-veltium.png')
	background-repeat no-repeat
	background-position center
	background-size cover
	color $white
	
	&-mobile
		background-color $black
		display flex
		justify-content center
		align-items center
		height 50px
		
	&-image
		display inline-block
		height 35px
		margin 0 1em
		
	&-link
		font-size 10pt
		color $white
		padding 0.7em 0
		text-decoration none
		
	&-link:hover
		border-top 3px solid $blue
		border-bottom 3px solid $blue
		
	&-description
		display inline-block
		color $blue
		font-size .8em
		
	&-menu
		background-color $black-light
		display flex
		justify-content space-around
		align-items center
		height 64px
		
		&List
			li
				border-left 2px solid $white
				display inline-block
				
				a
					text-decoration none
					color $white
					padding 1em 0.7em
					
				a:hover
					border-top 3px solid $blue
					border-bottom 3px solid $blue
			
			li:nth-child(1)
				border-left 0 none $black-light
			
.HeaderContainer
	position fixed
	top 0
	left 0
	width 100%
	
	&--transparent
		opacity 0.7
	
			
.Cover
	background-image linear-gradient(180deg, rgba(0, 0, 0, 0.4) 20%, rgba(0, 0, 0, 0.7))
	color $white
	display flex
	align-items center
	flex-direction column
	padding-top 114px
	padding-bottom 2rem
	
	&-image
		margin 1em 0
		
	&-title, &-description
		padding 0 1rem
		text-align center
		
	&-title
		font-size 1.5rem
		
	&-description
		max-width 480px
		
	&-socialLink
		color $white
		padding 0.5em
		
@media (min-width 768px)
	.Header
		
		&-link
			font-size 12pt
		
@media (min-width 900px)
	.Header
		
		&-mobile
			height 64px
			
		&-link
			font-size 14pt
			
		&-menu
			background-color $black

	.HeaderContainer
		background-color $black
		display flex
		justify-content space-between
		height 64px
		
	.Cover
		margin-top 64px
		
/*
	Estilos para el page.php
*/

.PageCover
	background-repeat no-repeat
	background-position center
	background-size cover
	color $white
	display flex
	justify-content flex-end
	align-items center
	flex-direction column
	height 40vh
	margin-top 114px
	
	&Mask
		background-image linear-gradient(180deg, rgba(0, 0, 0, 0.4) 20%, rgba(0, 0, 0, 0.7))
		display flex
		justify-content center
		width 100%
		height 100%
	
	&Container
		font-size 20px
		display flex
		align-items flex-end
		max-width 768px
		width 100%
	
	&-title
		color $white
		font-size 2em
		padding 16px
		
@media (min-width 768px)
	.PageCover
		&-title
			font-size 3em
			padding 34px
			
@media (min-width 900px)
	.PageCover
		background-size 100% 290%
		margin-top 64px