.Footer
	background-color $black
	color $white
	display flex
	justify-content center
	padding 2em 1.5em
	
	&-copyright
		color $blue
		text-align center
		
	&-description
		text-align center
		
	&-socialContainer
		margin-bottom 1em
		
	&-socialLink
		color $white
		padding 0.5em
		
		
	&-list
		text-align center
		li
			list-style none
			padding 0.5em 0.2em	
			
			a
				color $white
				text-decoration none
				
			a:hover
				color $blue
		
.FooterContainer
	display flex
	align-items center
	flex-direction column
	max-width 768px