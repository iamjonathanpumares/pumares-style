@import './reset.styl'

$black = #212121
$black-light = #333333
$white = #FAFAFA
$blue = #19B5FE

body
	font-size 16px
	font-family 'Roboto Slab'
	font-weight 300
	color #4d4d4d
	
h1
h2
h3
h4
h5
h6
	font-family: 'Lato', sans-serif;
	font-weight 700
	margin-bottom 0.5rem
	
h2
	font-size 2.3rem
	
p
	font-size 1.1rem
	letter-spacing 0.01rem
	
b
strong
	font-weight bold
	
blockquote
	border-left 0.4em solid #4a4a4a
	padding 0 0 0 1.6em
	
.commentlist li {
  list-style: none !important;
}


.comment-body {
  padding: 15px;
}

.comment-author {
  margin-top: 5px;
}

.reply,  .commentmetadata {
  font-size: 0.9em;
}


.depth-1, .depth-2, .depth-3, .depth-4 {
  border: 1px solid #eaeaea;
  border-radius: 4px;
}

.depth-1, .depth-3 {
  background-color: #fafafa;
}

.depth-2, .depth-4 {
   background-color: #fff;
}

.comment-author-eSandra {
  border: 3px solid #eaeaea;
  border-left:3px solid #fbc356;
}

.depth-1 {
   margin: 20px 0;
}
/* Respuesta a comentarios*/


